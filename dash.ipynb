        ]] + [{'label': 'Select All', 'value': 'all'}],
        value=['25-44'],
        multi=True,
        style={'width': '50%'}
    ),
    html.Button('Apply', id='apply-button', n_clicks=0),
    dcc.Graph(id='crime-graph'),
